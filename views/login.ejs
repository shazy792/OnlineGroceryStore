<!DOCTYPE html>
<html lang="en">
<head>
    <% include ./partials/head %>
</head>
<style type="text/css">
.button-place {
        display: block;
        margin-left: 45%;
}
.btn {
    width: 90px;
}
</style>
<body class="container">

    <header>
        <% include ./partials/header %>
    </header>

    <main>
        <div class="jumbotron">
            <h1>LOGIN</h1>

            <form method="post" action="/login">
              <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" name="login[EMAIL]" class="form-control" id="exampleInputEmail1" placeholder="Email">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" name="login[PASSWORD]" class="form-control" id="exampleInputPassword1" placeholder="Password">
            </div>
            <div class="button-place">
           <input class="btn btn-success" type="submit" value="Login">
           <a class="btn btn-primary" href="/singup">SignUp</a>
           </div>
      </form>

  </div>
</main>

<footer>
    <% include ./partials/footer %>
</footer>

</body>
</html>