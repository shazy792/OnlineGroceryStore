<!-- views/pages/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <% include ./partials/head %>
</head>
<style type="text/css">
.button-place {
        display: block;
        margin-left: 45%;
}
.btn {
    width: 150px;
}
</style>
<body class="container">

    <header>
        <% include ./partials/header %>
    </header>

    <main>
        <div class="jumbotron">
            <h1>Update Account</h1>

            <form method="post" action="/user">

            <h2>Basic Information</h2>
            <% customer.forEach(function(customer) { %>
              <div class="form-group">
                <label for="exampleInputEmail1">First Name</label>
                <input type="text" name="customer[FIRSTNAME]" class="form-control" id="exampleInputEmail1" value="<%= customer.FIRSTNAME %>">
                <input type="hidden" name="customer[CUSTOMERID]" class="form-control" id="exampleInputEmail1" value="<%= customer.CUSTOMERID %>">
                <input type="hidden" name="customer[EMAIL]" class="form-control" id="exampleInputEmail1" value="<%= customer.EMAIL %>">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Last Name</label>
                <input type="text" name="customer[LASTNAME]" class="form-control" id="exampleInputPassword1" value="<%= customer.LASTNAME  %>">
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="text" name="customer[PASSWORD]" class="form-control" id="exampleInputPassword1" value="<%= customer.PASSWORD %>">
            </div>
          <% }); %>

            <h2>Address</h2>
          <% address.forEach(function(address) { %>  
              <div class="form-group">
                <label for="exampleInputEmail1">Street</label>
                <input type="text" name="address[STREET]" class="form-control" id="exampleInputEmail1" value="<%= address.STREET  %>">
                <input type="hidden" name="address[ADDRESSID]" class="form-control" id="exampleInputEmail1" value="<%= address.ADDRESSID %>">
            </div>
              <div class="form-group">
                <label for="exampleInputEmail1">City</label>
                <input type="text" name="address[CITY]" class="form-control" id="exampleInputEmail1" value="<%= address.CITY  %>">
            </div>
              <div class="form-group">
                <label for="exampleInputEmail1">State</label>
                <input type="text" name="address[STATE]" class="form-control" id="exampleInputEmail1" value="<%= address.STATE  %>">
            </div>
              <div class="form-group">
                <label for="exampleInputEmail1">Zipcode</label>
                <input type="text" name="address[ZIPCODE]" class="form-control" id="exampleInputEmail1" value="<%= address.ZIPCODE  %>">
            </div>
          <% }); %>
            
          <h2>Credit Card information</h2>
          <% creditcard.forEach(function(creditcard) { %>              
              <label for="exampleInputl1">Card: <%= creditcard.CARDNUMBER %></label>
              <div class="form-group">
                <label for="exampleInputEmail1">CVC</label>
                <input type="text" name="creditcard[CVC]" class="form-control" id="exampleInputEmail1" value="<%= creditcard.CVC  %>">
                <input type="hidden" name="creditcard[CARDNUMBER]" class="form-control" id="exampleInputEmail1" value="<%= creditcard.CARDNUMBER  %>">
            </div> 

              <div class="form-group">
                <label for="exampleInputEmail1">Name Card</label>
                <input type="text" name="creditcard[NAMEONCARD]" class="form-control" id="exampleInputEmail1" value="<%= creditcard.NAMEONCARD  %>">
            </div> 

              <div class="form-group">
                <label for="exampleInputEmail1">Expiry Month</label>
                <input type="text" name="creditcard[EXPIRYMONTH]" class="form-control" id="exampleInputEmail1" value="<%= creditcard.EXPIRYMONTH  %>">
            </div> 

            <div class="form-group">
                <label for="exampleInputEmail1">Expiry Year</label>
                <input type="text" name="creditcard[EXPIRYYEAR]" class="form-control" id="exampleInputEmail1" value="<%= creditcard.EXPIRYYEAR  %>">
            </div> 
          <% }); %>

            <h2>Payment Address</h2>
          <% ccaddress.forEach(function(ccaddress) { %>             
              <div class="form-group">
                <label for="exampleInputEmail1">Street</label>
                <input type="text" name="ccaddress[STREET]" class="form-control" id="exampleInputEmail1" value="<%= ccaddress.STREET  %>">
                <input type="hidden" name="ccaddress[ADDRESSID]" class="form-control" id="exampleInputEmail1" value="<%= ccaddress.ADDRESSID %>">
            </div>
              <div class="form-group">
                <label for="exampleInputEmail1">City</label>
                <input type="text" name="ccaddress[CITY]" class="form-control" id="exampleInputEmail1" value="<%= ccaddress.CITY  %>">
            </div>
              <div class="form-group">
                <label for="exampleInputEmail1">State</label>
                <input type="text" name="ccaddress[STATE]" class="form-control" id="exampleInputEmail1" value="<%= ccaddress.STATE  %>">
            </div>
              <div class="form-group">
                <label for="exampleInputEmail1">Zipcode</label>
                <input type="text" name="ccaddress[ZIPCODE]" class="form-control" id="exampleInputEmail1" value="<%= ccaddress.ZIPCODE  %>">
            </div>
          <% }); %>

            <div class="button-place">
           <input class="btn btn-success" type="submit" value="Submit Changes">
           </div>
      </form>
      
  </div>
</main>

<footer>
    <% include ./partials/footer %>
</footer>

</body>
</html>